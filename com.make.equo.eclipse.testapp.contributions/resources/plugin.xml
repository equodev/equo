<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
			point="org.eclipse.ui.commands">
		<category
				name="com.make.equo.eclipse.testapp.contributions.commands.category"
				description="Category for menu commands"
				id="com.make.equo.eclipse.testapp.contributions.commands.category">
		</category>
		<command
		    name="Open Test Dialog"
		    categoryId="com.make.equo.eclipse.testapp.contributions.commands.category"
		    id="com.make.equo.eclipse.testapp.contributions.commands.opentestdialog">
		</command>
	</extension>
	<extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="com.make.equo.eclipse.testapp.contributions..commands.opentestdialog"
            class="com.make.equo.eclipse.testapp.contributions.handlers.OpenTestDialogHandler">
      </handler>
   </extension>
	<extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.file?before=save">
         <command
               commandId="com.make.equo.eclipse.testapp.contributions..commands.opentestdialog"
               icon="design-center.png"
               id="com.make.equo.eclipse.testapp.contributions.commands.openatestdialogtoolbar"
               tooltip="Open Test Dialog">
         </command>
      </menuContribution>
   </extension>

   <extension
       point="org.eclipse.ui.bindings">
	    <key
	          commandId="com.make.equo.eclipse.testapp.contributions.commands.opentestdialog"
	          schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
	          sequence="M1+M3+M D">
	    </key>
 	</extension>
</plugin>
